{
  "name": "laravel-blade-var-hint",
  "displayName": "Laravel-Blade-Var-Hint",
  "description": "Autocompletion and Type Hint for Laravel Blade variables",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:blade",
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "blade",
        "aliases": [
          "Laravel Blade",
          "blade"
        ],
        "extensions": [
          ".blade.php"
        ]
      }
    ],
    "configuration": {
      "title": "Laravel Blade Type Sync",
      "properties": {
        "laravel-blade-variable-helper.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Laravel Blade Variable Helper"
        },
        "laravel-blade-variable-helper.controllerPaths": {
          "type": "array",
          "default": [
            "app/Http/Controllers/**/*.php"
          ],
          "description": "Paths to search for Laravel controllers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "php-parser": "^3.2.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
